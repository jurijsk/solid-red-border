{
	"name": "solid-red-border",
	"version": "0.0.1",
	"type": "module",
	"description": "it like setting `border 1px solid red;` but on steroids",
	"repository": "https://github.com/jurijsk/solid-red-border",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/jurijsk/"
	},
	"files": [
		"dist"
	],
	"main": "./dist/index.umd.cjs",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.umd.cjs"
		}
	},
	"types": "./dist/index.d.ts",
	"scripts": {
		"dev": "vite --host",
		"build": "rimraf ./dist && tsc && vite build",
		"tsc": "npx tsc",
		"test:coverage": "vitest --coverage",
		"lint:scripts": "eslint . --ext .ts",
		"lint:styles": "stylelint ./**/*.{css,scss}",
		"format:scripts": "prettier . --write",
		"format:styles": "stylelint ./**/*.{css,scss} --fix",
		"format": "npm run format:scripts && npm run format:styles",
		"xxprepare": "husky install && husky set .husky/pre-commit 'npx lint-staged' && git add .husky/pre-commit",
		"xxuninstall-husky": "npm uninstall husky --no-save && git config --unset core.hooksPath && npx rimraf .husky"
	},
	"devDependencies": {
		"@types/jsdom": "^21.1.6",
		"@types/node": "^20.11.5",
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"@vitest/coverage-v8": "^1.2.1",
		"copyfiles": "^2.4.1",
		"dts-bundle-generator": "^9.2.4",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"lint-staged": "^15.2.0",
		"npm-packlist": "^10.0.0",
		"postcss": "^8.4.33",
		"postcss-scss": "^4.0.9",
		"prettier": "^3.2.4",
		"rimraf": "^5.0.5",
		"stylelint": "^16.2.0",
		"stylelint-config-recommended": "^14.0.0",
		"stylelint-config-sass-guidelines": "^11.0.0",
		"stylelint-order": "^6.0.4",
		"stylelint-prettier": "^5.0.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"vite": "^5.0.12",
		"vite-plugin-dts": "^3.7.3",
		"vitest": "^1.2.1"
	}
}